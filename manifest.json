{
	"name": "Google Meet Remove Controls",
	"description": "Removes everything except for the videos from Google Meet",
	"author": "bobsfriend12",
	"icons": {
		"16": "logo16.png",
		"32": "logo32.png",
		"48": "logo48.png",
		"128": "logo128.png"
	},
	"homepage_url": "https://github.com/bobsfriend12/google-meet-remove-controls",
	"version": "1.0",
	"manifest_version": 3,

	"permissions": ["tabs", "contextMenus"],
	"host_permissions": ["*://meet.google.com/"],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Hide Controls"
	},
	"content_scripts": [
		{
			"matches": ["*://meet.google.com/*"],
			"js": ["content.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
